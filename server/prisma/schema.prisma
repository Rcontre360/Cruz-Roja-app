generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Replace with your database provider (e.g., mysql, sqlite)
  url      = env("POSTGRES_ENDPOINT") // Your database connection string
}

model User {
  id        String     @id @default(uuid()) @db.Uuid
  email     String     @unique
  password  String
  name      String
  role      Role       @default(USER)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  sessions  Session[] // A user can have multiple active sessions
  Activity  Activity[]
  Program   Program[]
}

model Activity {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  description String
  creatorId   String   @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  startDate   DateTime
  endDate     DateTime
  location    String? // Optional field for location

  // Relationships
  creator User @relation(fields: [creatorId], references: [id])
}

model Session {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  // Relationships
  user User @relation(fields: [userId], references: [id])
}

model Program {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  description  String
  creationDate DateTime @default(now())
  createdBy    User     @relation(fields: [createdById], references: [id])
  createdById  String   @db.Uuid
}

enum Role {
  ADMIN
  USER
}
